@model IEnumerable<AspNetPim.Models.EditUserViewModel>

@{
    ViewBag.Title = "Manage users";
}

<p>
    @Html.ActionLink("Create New", "Register") 
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, name = item.Name }) |
                @Html.ActionLink("Roles", "UserRoles", new { id = item.Id, name = item.Name }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, name = item.Name })
            </td>
        </tr>
    }

</table>